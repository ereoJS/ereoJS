{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["bun-types"],
    "paths": {
      "@oreo/core": ["../packages/core/src/index.ts"],
      "@oreo/router": ["../packages/router/src/index.ts"],
      "@oreo/data": ["../packages/data/src/index.ts"],
      "@oreo/server": ["../packages/server/src/index.ts"],
      "@oreo/client": ["../packages/client/src/index.ts"],
      "@oreo/testing": ["../packages/testing/src/index.ts"],
      "@oreo/dev-inspector": ["../packages/dev-inspector/src/index.ts"],
      "@oreo/dev-inspector/*": ["../packages/dev-inspector/src/*"]
    }
  },
  "include": ["app/**/*", "tests/**/*", "oreo.config.ts"]
}
