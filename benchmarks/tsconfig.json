{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["bun-types"]
  },
  "include": ["shared/**/*.ts", "runners/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["apps", "node_modules", "results", "reports"]
}
