{
  "name": "@ereo/plugin-images",
  "version": "0.2.19",
  "license": "MIT",
  "author": "Ereo Team",
  "homepage": "https://ereojs.github.io/ereoJS",
  "repository": {
    "type": "git",
    "url": "https://github.com/ereoJS/ereoJS.git",
    "directory": "packages/plugin-images"
  },
  "bugs": {
    "url": "https://github.com/ereoJS/ereoJS/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts ./src/components/index.ts --outdir ./dist --target bun --external @ereo/core --external sharp && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "dev": "bun build ./src/index.ts --outdir ./dist --target bun --watch",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ereo/core": "workspace:*",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/react": "^18.2.0",
    "@types/sharp": "0.32.0",
    "typescript": "^5.4.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}
