{
  "name": "@ereo/plugin-tailwind",
  "version": "0.1.33",
  "license": "MIT",
  "author": "Ereo Team",
  "homepage": "https://ereojs.github.io/ereoJS",
  "repository": {
    "type": "git",
    "url": "https://github.com/ereoJS/ereoJS.git",
    "directory": "packages/plugin-tailwind"
  },
  "bugs": {
    "url": "https://github.com/ereoJS/ereoJS/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun --external @ereo/core --external tailwindcss --external postcss --external autoprefixer && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "dev": "bun build ./src/index.ts --outdir ./dist --target bun --watch",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ereo/core": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "typescript": "^5.4.0"
  },
  "peerDependencies": {
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    },
    "autoprefixer": {
      "optional": true
    }
  }
}
