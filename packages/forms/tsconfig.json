      "@ereo/data": ["../data/dist/index.d.ts"],
      "@ereo/client": ["../client/dist/index.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
