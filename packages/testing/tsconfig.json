{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "skipLibCheck": true,
    "paths": {
      "@ereo/core": ["../core/dist/index.d.ts"],
      "@ereo/router": ["../router/dist/index.d.ts"],
      "@ereo/data": ["../data/dist/index.d.ts"],
      "@ereo/server": ["../server/dist/index.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
