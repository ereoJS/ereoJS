    "typecheck": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@areo/core": "workspace:*",
    "@areo/router": "workspace:*",
    "@areo/data": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "typescript": "^5.4.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}
