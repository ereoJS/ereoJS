{
  "name": "@ereo/deploy-cloudflare",
  "version": "0.1.35",
  "license": "MIT",
  "author": "Ereo Team",
  "homepage": "https://ereojs.github.io/ereoJS",
  "repository": {
    "type": "git",
    "url": "https://github.com/ereoJS/ereoJS.git",
    "directory": "packages/deploy-cloudflare"
  },
  "bugs": {
    "url": "https://github.com/ereoJS/ereoJS/issues"
  },
  "description": "Cloudflare Pages/Workers deployment adapter for EreoJS framework",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun --external @ereo/core && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "dev": "bun build ./src/index.ts --outdir ./dist --target bun --watch",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ereo/core": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "typescript": "^5.4.0"
  }
}
